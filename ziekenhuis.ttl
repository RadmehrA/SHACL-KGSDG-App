@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ex: <http://example.org/> .

# Shape for a Person
ex:PersonShape a sh:NodeShape ;
    sh:targetClass ex:Person ;

    sh:property [
        sh:path ex:hasName ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path ex:hasAge ;
        sh:datatype xsd:int ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path ex:hasEducationLevel ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path ex:hasMaritalStatus ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path ex:hasCountry ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path ex:hasDiseaseDiagnosis ;
        sh:datatype xsd:boolean ;
        sh:minCount 1 ;
        sh:maxCount 2 ;
    ] ;
    sh:property [
        sh:path ex:hasIncome ;
        sh:datatype xsd:decimal ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path ex:hasCity ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path ex:isAllergicTo ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 2 ;
    ] ;
    sh:property [
        sh:path ex:hasBloodType ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path ex:hasHairColor ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path ex:takesMedication ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 2 ;
    ] ;
    sh:property [
        sh:path ex:hasGeneralPractice ;
        sh:datatype xsd:string ;
        sh:minCount 1;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path ex:belongsToHospitalSection ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] .

# Shape for an Address
ex:AddressShape a sh:NodeShape ;
    sh:targetClass ex:Address ;
    sh:property [
        sh:path ex:hasStreet ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path ex:hasPostalCode ;
        sh:datatype xsd:string ;
        sh:maxCount 1 ;
        sh:maxCount 1 ;
    ] .

# Shape for a Language
ex:LanguageShape a sh:NodeShape ;
    sh:targetClass ex:English ;
    sh:property [
        sh:path ex:spokenIn ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 2 ;
    ] .
